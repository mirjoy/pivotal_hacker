<h1>Edit a Task</h1>
<%= form_for(:task, url: task_path, method: :put) do |f| %>
  <p><%= f.label :title %>
  <%= f.text_field :title %></p>

  <p><%= f.label :description %>
  <%= f.text_field :description %></p>

  <p><%= f.label :status %>
  <%= f.select :status, options_for_select(['backlog', 'current sprint', 'in progress', 'done']) %></p>
  <%= f.hidden_field(:project_id, value: @task.project_id) %>
  <%= f.hidden_field(:task_id, value: @task.id) %>


  <p><%= f.submit class: "btn btn-success" %></p>
<% end %>
